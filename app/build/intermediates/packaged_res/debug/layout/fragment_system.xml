<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.home.FragmentSystem">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
            android:id="@+id/loadingDepartment"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="120dp"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            app:type="chrome_floating_circles"/>
        <TextView
            android:id="@+id/textQuizHome"
            android:text="@string/txtListDepartment"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/txtSeeAll"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_purple"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="30dp"
            android:id="@+id/recycleListLiveQuizzes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>