<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.FragmentLogin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="@string/login"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="81dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/txtEmailOrPhone"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="88dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtEnterEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_edittext"
            android:hint="@string/txtEmailOrPhone"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="50dp"
            android:textColor="@color/black"
            android:textColorHint="@color/color_to_do_late"
            android:textSize="18sp"
            android:imeOptions="actionDone"/>

        <TextView
            android:text="@string/password"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/passwordLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_edittext"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="50dp"
                android:textColor="@color/black"
                android:textColorHint="@color/color_to_do_late"
                android:textSize="18sp"
                android:imeOptions="actionDone"/>

            <ImageButton
                android:id="@+id/hidePasswordLogin"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/icon_hint_grey"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/warningLogin"
            android:layout_marginStart="10dp"
            android:text="@string/txt_notification_login"
            android:textSize="15sp"
            android:textColor="@color/color_red"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkForgetPassword"
                android:button="@drawable/select_checkbox"
                android:text="@string/txtRememberPassword"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_forgetpassword"
                android:text="@string/txtForgetPassword"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
        <Button
            android:id="@+id/login"
            android:text="@string/login"
            android:textSize="18sp"
            android:background="@drawable/bg_button"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:background="@drawable/boder_login_other">
            <ImageView
                android:src="@drawable/icon_google"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/textGoogle"
                android:text="@string/txtLoginWithGoogle"
                android:textSize="16sp"
                android:textColor="@color/color_login_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:background="@drawable/boder_login_other">
            <ImageView
                android:src="@drawable/icon_facebook"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/textFacebook"
                android:text="@string/txtLoginWithFacebook"
                android:textSize="16sp"
                android:textColor="@color/color_login_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/boder_login_other"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/icon_apple" />

            <TextView
                android:id="@+id/textApple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtLoginWithApple"
                android:textColor="@color/color_login_other"
                android:textSize="16sp" />
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="76dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/txtHaventAccount"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                Æ°                                                                                                                                                                                                                                                                                          <TextView
                    android:id="@+id/registerNow"
                    android:layout_marginStart="5dp"
                    android:text="@string/txtRegisterNow"
                    android:textSize="16sp"
                    android:textColor="@color/backgroundIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>