<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundIntro"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.intro.FragmentIntroLogin">

    <ImageView
        android:id="@+id/logo5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo5"
        android:layout_width="match_parent"
        android:layout_height="270dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/logo5"
            android:background="@drawable/background_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="40dp"
            android:gravity="center">
            <TextView
                android:text="@string/txtLoginOrRegister"
                android:layout_marginTop="34dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:text="@string/txtNoteIntroLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/loginIntro"
                android:text="@string/login"
                android:textColor="@color/white"
                android:layout_marginTop="34dp"
                android:paddingVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/login"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/registerIntro"
                android:text="@string/register"
                android:layout_marginTop="16dp"
                android:paddingVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/backgroundIntro"
                android:background="@drawable/regist"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

</RelativeLayout>