<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.profile.setting.FragmentUpdateEmail">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="72dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/backUpdateEmail"
                    android:src="@drawable/icon_back_black"
                    android:layout_width="30dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/txtCapNhatEmail"
                    android:text="@string/txtUpdateEmail"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:text="@string/txtNewAddressEmail"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="109dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder_setting_new_password"
                    android:hint="@string/txtEnterAddressEmail"
                    android:inputType="textEmailAddress"
                    android:paddingVertical="16dp"
                    android:paddingStart="56dp"
                    android:paddingEnd="50dp"
                    android:textColorHint="@color/color_number_position"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:src="@drawable/icon_email_update"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="441dp"
                app:cardBackgroundColor="@color/backgroundIntro"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:text="@string/txtResetEmail"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>