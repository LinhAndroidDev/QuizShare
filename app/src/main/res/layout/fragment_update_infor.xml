<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.profile.setting.info.FragmentUpdateInfor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="72dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/backUpdateInfo"
                android:src="@drawable/icon_back_black"
                android:layout_width="30dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/txtCapNhatThongTin"
                android:text="@string/txtUpdateInfor"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarUpdateInfo"
                android:src="@drawable/logo6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/changeAvatar"
                android:src="@drawable/bg_stroke_avatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:text="@string/txtName"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edtNameInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_setting_new_password"
                android:hint="@string/txtName"
                android:inputType="textEmailAddress"
                android:paddingVertical="16dp"
                android:paddingStart="56dp"
                android:paddingEnd="50dp"
                android:textColorHint="@color/color_number_position"
                android:textSize="16sp"
                android:imeOptions="actionDone"
                />
            <ImageView
                android:src="@drawable/icon_person_blue"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/txtDate"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/edtBirthInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_setting_new_password"
                android:hint="@string/txtEnterAge"
                android:paddingVertical="16dp"
                android:paddingStart="56dp"
                android:paddingEnd="50dp"
                android:textColorHint="@color/color_number_position"
                android:textSize="16sp"
                />
            <ImageView
                android:id="@+id/selectDateInfo"
                android:src="@drawable/icon_calendar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/resetInfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="39dp"
        app:cardBackgroundColor="@color/backgroundIntro"
        app:cardCornerRadius="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="@string/txtResetInfor"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>