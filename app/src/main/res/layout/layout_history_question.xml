<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="17dp"
    android:paddingHorizontal="8dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/un_select_text_view">
    <ImageView
        android:id="@+id/imageQuestionHistory"
        android:src="@drawable/icon_test_subject"
        android:layout_width="64dp"
        android:layout_height="64dp"/>
    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tiltleQuestionHistory"
                android:text="Đề 1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/descripQuestionHistory"
                android:layout_marginTop="6dp"
                android:text="Toán • 12 Trắc nghiệm"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/deleteQuestionHistory"
                    android:text="Xoá |"
                    android:textSize="12sp"
                    android:textColor="@color/pink_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/editQuestionHistory"
                    android:text=" Chỉnh sửa"
                    android:textSize="12sp"
                    android:textColor="@color/backgroundIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/icon_next_black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>