<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.forgetpassword.FragmentForgetPassword">

    <TextView
        android:text="@string/txtForgetPassword"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="81dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/txtEmailOrPhone"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="88dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/emailForgetPassword"
        android:background="@drawable/background_edittext"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:paddingStart="20dp"
        android:paddingEnd="50dp"
        android:hint="@string/txtEmailOrPhone"
        android:textColorHint="@color/color_to_do_late"
        android:inputType="textEmailAddress"
        tools:ignore="TextFields" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/sendTo"
            android:text="@string/txtSend"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </RelativeLayout>

</LinearLayout>