<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundIntro"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.intro.IntroLoginActivity">

    <ImageView
        android:id="@+id/logo5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo5"
        android:layout_width="match_parent"
        android:layout_height="270dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/logo5"
        android:background="@drawable/background_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">
        <TextView
            android:text="Đăng nhập hoặc đăng ký"
            android:layout_marginTop="34dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:text="Đăng nhập hoặc tạo tài khoản để làm bài kiểm tra,tham gia thử thách, v.v."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/loginIntro"
            android:text="Đăng nhập"
            android:textColor="#FFFFFF"
            android:layout_marginTop="34dp"
            android:paddingVertical="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/login"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/registerIntro"
            android:text="Đăng kí"
            android:layout_marginTop="16dp"
            android:paddingVertical="16dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/backgroundIntro"
            android:background="@drawable/regist"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/toDoLate"
            android:text="Để sau"
            android:textSize="20dp"
            android:textColor="#5C5C5C"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>