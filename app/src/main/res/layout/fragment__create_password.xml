<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.forgetpassword.FragmentCreatePassword">

    <TextView
        android:text="@string/txtCreatePasswordNew"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="81dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/txtPasswordNew"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="88dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/newPasswordCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_edittext"
            android:hint="@string/txtPasswordNew"
            android:textColorHint="@color/color_to_do_late"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:imeOptions="actionDone"/>
        <ImageButton
            android:id="@+id/hidePasswordCreate"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/icon_hint_grey"
            android:layout_alignParentEnd="true"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </RelativeLayout>
    <TextView
        android:text="@string/txtRepeatNewPassword"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/newPasswordRepeat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_edittext"
            android:hint="@string/txtRepeatNewPassword"
            android:textColorHint="@color/color_to_do_late"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:imeOptions="actionDone"/>
        <ImageButton
            android:id="@+id/hidePasswordRepeat"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/icon_hint_grey"
            android:layout_alignParentEnd="true"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/resetPassword"
            android:text="@string/txtResetPassword"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </RelativeLayout>
</LinearLayout>