<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.createtest.FragmentCreateTest"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtAddTest"
                    android:text="@string/txtAddTest"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/menuCreateTest"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_menu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="@color/bg_card_setting"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageCover"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/addCoverImage"
                            android:src="@drawable/icon_image"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>
                        <TextView
                            android:text="@string/txtAddImageCover"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/backgroundIntro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtTiltle"
                android:text="@string/txtTitleCreateTest"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColorHint="#858494"
                android:hint="Nhập tiêu đề bài kiểm tra"
                android:paddingStart="24dp"
                android:paddingEnd="50dp"
                android:paddingVertical="16dp"
                android:background="@drawable/boder_setting_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
            <TextView
                android:id="@+id/txtDownTest"
                android:text="@string/txtDownTest"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/googleSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/boder_quiz">
                    <ImageView
                        android:src="@drawable/icon_sheet"
                        android:layout_width="16.67dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="7dp"/>
                    <TextView
                        android:text="Sheet"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder_quiz"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="16.67dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/icon_excel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excel"
                        android:textSize="16sp" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/backgroundIntro">
                    <TextView
                        android:text="@string/txtHandmade"
                        android:textColor="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/txtSelectDepartment"
                android:layout_marginTop="16dp"
                android:text="@string/txtSelectDepartment"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16sp"
                    android:textColorHint="@color/color_number_position"
                    android:hint="@string/txtSelectDepartmentOrSubject"
                    android:paddingStart="24dp"
                    android:paddingEnd="50dp"
                    android:paddingVertical="16dp"
                    android:background="@drawable/boder_setting_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
                <ImageView
                    android:id="@+id/selectDepartment"
                    android:src="@drawable/down"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtSelectMode"
                android:layout_marginTop="16dp"
                android:text="@string/txtSelectMode"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16sp"
                    android:textColorHint="@color/color_number_position"
                    android:hint="@string/txtPublicOrPrivate"
                    android:paddingStart="24dp"
                    android:paddingEnd="50dp"
                    android:paddingVertical="16dp"
                    android:background="@drawable/boder_setting_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
                <ImageView
                    android:id="@+id/selectMode"
                    android:src="@drawable/down"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtTimeDoTest"
                android:layout_marginTop="16dp"
                android:text="@string/txtTimeDoTest"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16sp"
                    android:textColorHint="@color/color_number_position"
                    android:hint="@string/txtEnterTime"
                    android:paddingStart="24dp"
                    android:paddingEnd="50dp"
                    android:paddingVertical="16dp"
                    android:background="@drawable/boder_setting_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
                <ImageView
                    android:src="@drawable/icon_time"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtNumberQuestion"
                android:layout_marginTop="16dp"
                android:text="@string/txtNumberQuiz"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/color_number_position"
                android:hint="@string/txtEnterNumberQuiz"
                android:paddingStart="24dp"
                android:paddingEnd="50dp"
                android:paddingVertical="16dp"
                android:background="@drawable/boder_setting_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
            <TextView
                android:id="@+id/txtDetail"
                android:layout_marginTop="16dp"
                android:text="@string/txtDetail"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="16sp"
                android:paddingVertical="16dp"
                android:paddingStart="24dp"
                android:paddingEnd="50dp"
                android:layout_marginTop="8dp"
                android:textColorHint="#858494"
                android:hint="@string/txtEnterDetail"
                android:background="@drawable/boder_setting_new_password"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:inputType="textMultiLine"
                android:gravity="left|top"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/boder_quiz">
                    <ImageView
                        android:id="@+id/shareTest"
                        android:src="@drawable/icon_share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/createTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/backgroundIntro">
                    <TextView
                        android:text="@string/txtCreateTest"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/layout_bottom_share"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>